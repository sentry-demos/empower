service: ${ASPNETCORE_APP_ENGINE_SERVICE}
env: flex
runtime: custom
beta_settings:
  cloud_sql_instances: ${DB_CLOUD_SQL_CONNECTION_NAME}=tcp:5432
manual_scaling:
  instances: 1
resources:
  cpu: 1
  memory_gb: 1.3
  disk_size_gb: 10
env_variables:
  RELEASE: ${RELEASE}
  ASPNETCORE_DSN: ${ASPNETCORE_DSN}
  DB_HOST: "172.17.0.1" # cloud sql auth proxy
  DB_DATABASE: ${DB_DATABASE}
  DB_USERNAME: ${DB_USERNAME}
  DB_PASSWORD: "${DB_PASSWORD}"
